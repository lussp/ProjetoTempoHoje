<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Weather Forecast</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      margin: 20px;
    }
    #data {
      margin-top: 20px;
    }
    .loading {
      font-size: 1.2em;
      color: #555;
    }
  </style>
</head>
<body>
  <h1>Weather Forecast</h1>
  <p>Latitude: -23.55 | Longitude: -46.63</p>
  <button onclick="fetchWeather()">Get Weather Data</button>

  <div id="data">
    <p class="loading" id="loading">Click the button to load weather data.</p>
  </div>

  <script>
    async function fetchWeather() {
      const loading = document.getElementById("loading");
      loading.textContent = "Loading weather data...";
      
      const url = "https://api.open-meteo.com/v1/forecast?latitude=-23.551141821779204&longitude=-46.63435038105965&hourly=temperature_2m,relative_humidity_2m,precipitation_probability,precipitation,cloud_cover,wind_speed_10m,wind_direction_10m,uv_index&temporal_resolution=hourly_3&forecast_days=1";

      try {
        const response = await fetch(url);
        const data = await response.json();

        const hourlyData = data.hourly;
        let content = `<h2>Weather Data</h2>`;
        content += `<p>Temperature (2m): ${hourlyData.temperature_2m.join(", ")}Â°C</p>`;
        content += `<p>Humidity (2m): ${hourlyData.relative_humidity_2m.join(", ")}%</p>`;
        content += `<p>Precipitation Probability: ${hourlyData.precipitation_probability.join(", ")}%</p>`;
        
        document.getElementById("data").innerHTML = content;
      } catch (error) {
        loading.textContent = "Error loading data.";
        console.error("Error fetching weather data:", error);
      }
    }
  </script>
</body>
</html>
